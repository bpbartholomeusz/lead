{{!
    @template theme_purity/progress-bar from block_myoverview in M3.5.

    This template renders a doughnut chart to show course progress.

    Example context (json):
    {
        "progress": "60"
    }
}}
<div class="course-progressbar-wrapper">
    <div class="progress-info">
        <div class="progress-label">
            <span>{{#str}}course_progressbar_completed, theme_purity{{/str}} {{progress}}%</span>
        </div>
        <div class="progress-percentage progress-count">
            <span>{{progresscountc}} / {{progresscounttotal}}</span>
        </div>
    </div>
    <div class="progress progress--value-{{progress}}">
        <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100" style="width: {{progress}}%;" title="{{progress}}%" data-toggle="tooltip"></div>
    </div>
</div>

{{!
    @template local_booking/my_students

    Instructor assigned students view.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div>
    {{> core/overlay_loading}}
    <br/><p><h3>{{#str}} mystudents, local_booking {{/str}}</h3></p>
    <table id="students-detail-{{uniqid}}" data-region="instructor-students" class="calendartable booking-table table-hover">
        <thead>
            <tr>
                <th class="header booking-header text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}} students, local_booking {{/str}}</span>
                </th>
                <th class="header booking-header text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}} simulator, local_booking {{/str}}</span>
                </th>
                <th class="header booking-header text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}} nextlesson, local_booking {{/str}}</span>
                </th>
                <th class="header booking-header text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}} enroldate, local_booking {{/str}}</span>
                </th>
            </tr>
        </thead>
        <tbody>
        {{#assignedstudents}}
            <tr data-region="booking">
                <td class="booking-text-big text-md-left" style="vertical-align: middle;">
                    <span>{{studentname}}</span>
                </td>
                <td class="booking-text booking-text-med text-sm-center" style="vertical-align: middle;">
                    <span>{{simulator}}</span>
                </td>
                <td class="booking-text booking-text-med text-sm-center" style="vertical-align: middle;">
                    <span>{{nextlesson}}</span>
                </td>
                <td class="booking-text booking-text-small text-sm-center" style="vertical-align: middle;">
                    <span>{{enroldate}}</span>
                </td>
            </tr>
        {{/assignedstudents}}
        </tbody>
    </table>
</div>


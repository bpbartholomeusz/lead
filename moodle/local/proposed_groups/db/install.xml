<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/proposed_groups/db" VERSION="2023050100" COMMENT="Proposed Group Requests">
    <TABLES>
        <TABLE NAME="proposed_groups_requests" COMMENT="Stores proposed group requests">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary Key"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User ID of the requester"/>
                <FIELD NAME="groupname" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Proposed group name"/>
                <FIELD NAME="description" TYPE="text" NOTNULL="false" COMMENT="Description of the proposed group"/>
                <FIELD NAME="audience" TYPE="text" NOTNULL="false" COMMENT="Intended audience for the group"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Timestamp when the request was made"/>
                <FIELD NAME="status" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" COMMENT="Status of the request: 0 = Pending, 1 = Approved, 2 = Rejected"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
